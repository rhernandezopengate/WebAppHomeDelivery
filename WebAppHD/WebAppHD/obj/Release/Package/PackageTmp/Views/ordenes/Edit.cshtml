@model WebAppHD.Models.ordenes

@{
    ViewBag.Title = "Edit";
    Layout = null;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="modal-header text-center">
        <button type="button" class="close" data-dismiss="modal">
            <span aria-hidden="true">×</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Editar Orden</h4>
        <h4>
            <label>@Model.Orden</label>
        </h4>
    </div>
    <div class="modal-body">
        <div class="form-horizontal">
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.id)

                <div class="form-group">
                    <label class="control-label col-md-2">Estatus</label>
                    <div class="col-md-10">
                        @Html.DropDownList("StatusOrdenImpresa_Id", null, htmlAttributes: new { @class = "form-control"})
                        @Html.ValidationMessageFor(model => model.StatusOrdenImpresa_Id, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
}

<style>
    .form-horizontal {
        display: block;
        width: 70%;
        margin: 0 auto;
    }
</style>